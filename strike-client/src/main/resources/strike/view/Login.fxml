<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<Pane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="strike.controller.Login" styleClass="root">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <children>
        <GridPane layoutX="200.0" layoutY="140.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextField fx:id="idUsername" GridPane.columnIndex="1"/>
                <PasswordField fx:id="idPassword" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="Username"/>
                <Label text="Password" GridPane.rowIndex="1"/>
                <Button onAction="#login" mnemonicParsing="false" text="Login" GridPane.columnIndex="1"
                        GridPane.rowIndex="2"/>
            </children>
        </GridPane>
        <Label layoutX="200.0" layoutY="89.0" text="Strike Chat Client">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <VBox layoutX="197.0" layoutY="230.0">
            <children>
                <Label text="Login using:"/>
                <HBox>
                    <children>
                        <RadioButton selected="true" text="Strike">
                            <toggleGroup>
                                <ToggleGroup fx:id="idAccountType"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="Twitter" toggleGroup="$idAccountType"/>
                        <RadioButton mnemonicParsing="false" text="Facebook" toggleGroup="$idAccountType"/>
                        <RadioButton mnemonicParsing="false" text="Google" toggleGroup="$idAccountType"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</Pane>
