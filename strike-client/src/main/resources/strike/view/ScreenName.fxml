         <font>
            <Font name="Helvetica Neue Bold" size="18.0" />
         </font>
      </Label>
      <Button layoutX="54.0" layoutY="215.0" mnemonicParsing="false" onAction="#login" prefHeight="40.0" prefWidth="367.0" styleClass="loginbutton" stylesheets="@style.css" text="Start Chatting">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Label layoutX="132.0" layoutY="58.0" prefHeight="40.0" prefWidth="210.0" text="Minimum 3 characters name that will appear next to your messages." textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Helvetica Light" size="13.0" />
         </font>
      </Label>
