   <children>
      <TextField fx:id="idScreenName" onAction="#login" alignment="CENTER" layoutX="100.0" layoutY="131.0" prefHeight="40.0" prefWidth="275.0" promptText="Screen Name" styleClass="input" stylesheets="@style.css" />
